<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_lampada"
    tools:context="com.example.felipe.superapp.lampada">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAzul"
                android:text="Azul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoAzul"/>
            <Button
                android:id="@+id/btnVerde"
                android:text="Verde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoVerde"/>
            <Button
                android:id="@+id/btnVermelho"
                android:text="Vermelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoVermelho"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnMarrom"
                android:text="Marrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoMarrom"/>
            <Button
                android:id="@+id/btnLaranja"
                android:text="Laranja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoLaranja"/>
            <Button
                android:id="@+id/btnAmarelo"
                android:text="Amarelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoAmarelo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnRoxo"
                android:text="Roxo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoRoxo"/>
            <Button
                android:id="@+id/btnBranco"
                android:text="Branco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="BotaoBranco"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="90dp"
            />
        <TextView
            android:id="@+id/Lampad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="90sp"
            android:gravity="center"
            android:text="Luz"
            />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />
        <Button
            android:id="@+id/btnAlternar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ligar/Desligar"
            android:onClick="Alternar"/>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    tools:context="com.example.felipe.superapp.MainActivity"
    android:weightSum="1">

    <ImageButton
        android:id="@+id/altCadt"
        android:onClick="cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_cad"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/altLampada"
        android:onClick="lampadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_lamp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />
    <ImageButton
        android:id="@+id/altCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_calc"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="calculadora"
        />
    <ImageButton
        android:id="@+id/altTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_triangulo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="triangulos"
        />
    <ImageButton
        android:id="@+id/altSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_sobre"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:onClick="sobre"
        />
</LinearLayout>
